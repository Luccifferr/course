@model CourseSystem.Models.Content

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Ýçerik Ýþlemleri</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-home"></i>Home</a></li>
                <li>Ýçerik  Ýþlemleri</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Ýçerik Güncelle</h4>
                    </div>
                    <div class="widget-inner">
                        <form class="edit-profile m-b30" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <table id="item-add" style="width:100%;">
                                        <tr class="list-item">
                                            <td>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Ýçerik Adý</label>
                                                        <div>
                                                            <input class="form-control" name="Name" type="text" value="@Model.Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Açýklama</label>
                                                        <div>
                                                            <input class="form-control" name="Description" type="text" value="@Model.Description">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Slayt Url</label>
                                                        <div>
                                                            <input class="form-control" name="SlideUrl" type="text" value="@Model.SlideUrl">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Video Url</label>
                                                        <div>
                                                            <input class="form-control" name="VideoUrl" type="text" value="@Model.VideoUrl">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Ödev Url</label>
                                                        <div>
                                                            <input class="form-control" name="HomeworkUrl" type="text" value="@Model.HomeworkUrl">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Ödev mi?</label>
                                                        <div>
                                                            @if (Model.IsHomework)
                                                            {
                                                                <input class="form-control" asp-for="IsHomework" type="checkbox" checked />

                                                            }
                                                            else
                                                            {
                                                                <input class="form-control" asp-for="IsHomework" type="checkbox" /> 
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="col-form-label"></label>
                                                        <div class="form-group">
                                                            <button class="btn" type="submit">Güncelle</button>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>

