@model CourseSystem.Models.Course

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Ders İşlemleri</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-home"></i>Home</a></li>
                <li>Ders İşlemleri</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Ders Güncelleme</h4>
                    </div>
                    <div class="widget-inner">
                        <form class="edit-profile m-b30" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <table id="item-add" style="width:100%;">
                                        <tr class="list-item">
                                            <td>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <label class="col-form-label"> Ders Adı</label>
                                                        <div>
                                                            <input class="form-control" name="Name" type="text" value="@Model.Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label"> Kategori Id</label>
                                                        <div> 
                                                            <select asp-for="CategoryId" class="" asp-items="ViewBag.CategoryId"></select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="col-form-label"></label>
                                                        <div class="form-group">
                                                            <button class="btn" type="submit">Değişiklikleri Kaydet</button>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main> 
@section Scripts {
}
