    <main class="ttr-wrapper">
        <div class="container-fluid">
            <div class="db-breadcrumb">
                <h4 class="breadcrumb-title">Scratch</h4>
                <ul class="db-breadcrumb-list">
                    <li><a href="@Url.Action("IndexTeacher","Home")"><i class="fa fa-home"></i>Home</a></li>
                    <li>Scratch</li>
                </ul>
            </div>
            @foreach (var item in Model)
            {
                @item.Name
                if (item.SlideUrl != null)
                {
                    <div class="container" style="position:relative;">
                        <iframe src="@item.SlideUrl" frameborder="0" width="100%" height="569" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>
                        <div class="overlay" style="background-color: rgba(228,230,231,255); width: 140px; height: 30px; position: absolute; bottom: 10px; right: 12px ">
                        </div>
                    </div>
                }
                if (item.VideoUrl != null)
                {
                    <div id="demo" class="carousel slide" data-bs-ride="carousel">
                        <!-- Video -->
                        <div class="carousel-item active">
                            <video src="@item.VideoUrl" id="myVideo" controls controlsList="nodownload" oncontextmenu="return false;" muted style="max-width: 100%; max-height: 100%"> </video>
                        </div>
                    </div>
                }

            }
        </div>
