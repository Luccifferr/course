@model List<CourseSystem.Models.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Rol Ýþlemleri</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Rol Ýþlemleri</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">

                    <div class="  m-b30">
                        <div class="col-lg-6 m-b30">
                            <div class="widget-box">
                                <div class="wc-title">
                                    <h4>Roller Listesi</h4>
                                </div>
                                <div class="widget-inner">
                                    @foreach (var user in Model)
    {
                                    <div class="new-user-list">
                                        <ul>
                                            <li>
                                                <span class="new-users-text">
                                                        <a class="new-users-name" style="cursor:default"> @user.FirstName </a>
                                                </span>
                                                <span class="new-users-text">
                                                        <a class="new-users-name" style="cursor:default"> @user.LastName </a>
                                                </span>
                                                <span class="new-users-text">
                                                        <a class="new-users-name" style="cursor:default"> @user.Email </a>
                                                </span>
                                                <span class="new-users-text">
                                                        <a class="new-users-name" style="cursor:default"> @string.Join(" , ", user.Roles.ToList()) </a>
                                                </span>
                                                <span class="new-users-btn">
                                                        <a class="btn button-sm outline" href="@Url.Action("Manage","UserRole",new{userId = user.UserId})"> Rolleri Yönet</a>
                                                </span>
                                            </li>

                                        </ul>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main> 