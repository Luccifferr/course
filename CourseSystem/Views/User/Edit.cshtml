@model CourseSystem.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Ders Ýþlemleri</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-home"></i>Home</a></li>
                <li>Ders Ýþlemleri</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Ders Güncelleme</h4>
                    </div>
                    <div class="widget-inner">
                        <form class="edit-profile m-b30" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <table id="item-add" style="width:100%;">
                                        <tr class="list-item">
                                            <td>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Ad</label>
                                                        <div>
                                                            <input class="form-control" name="FirstName" type="text" value="@Model.FirstName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Soyad</label>
                                                        <div>
                                                            <input class="form-control" name="LastName" type="text" value="@Model.LastName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Kullanýcý Adý</label>
                                                        <div>
                                                            <input class="form-control" name="Username" type="text" value="@Model.Username">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Email</label>
                                                        <div>
                                                            <input class="form-control" name="Email" type="text" value="@Model.Email">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Þifre</label>
                                                        <div>
                                                            <input class="form-control" name="Password" type="text" value="@Model.Password">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="col-form-label">Sýnýf Id</label>
                                                        <div>  
                                                                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId"></select> 
                                                        </div>
                                                    </div>

                                                    <div class="col-md-2">
                                                        <label class="col-form-label"></label>
                                                        <div class="form-group">
                                                            <button class="btn" type="submit">Deðiþiklikleri Kaydet</button>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>

 

